{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Search Proto Files (win)",
      "type": "shell",
      "command": "./utils/search_files.bat",
      "args": ["${workspaceFolder}\\api", ".proto"],
      "problemMatcher": []
    },
    {
      "label": "Generate API Proto Files (win)",
      "type": "shell",
      "command": "./utils/generate_proto.bat",
      "args": ["${workspaceFolder}\\api"],
      "problemMatcher": []
    },
    {
      "label": "Generate Proto Files (win)",
      "type": "shell",
      "command": "./utils/generate_proto.bat",
      "args": ["${input:protoDirectory}"],
      "problemMatcher": []
    },
    {
      "label": "Build Production (win)",
      "type": "shell",
      "command": "go",
      "problemMatcher": ["$go"],
      "args": [
        "build",
        "-o",
        "bin\\app.exe",
        "-ldflags",
        "-s -w -X main.Version=1.0.0 -X main.Env=Production -X main.ConfFolderPath=./config.yaml",
        "${workspaceFolder}\\cmd\\server"
      ]
    },
    {
      "label": "Generate Wire",
      "type": "shell",
      "command": "go",
      "problemMatcher": ["$go"],
      "args": ["generate", "./..."]
    }
  ],
  "inputs": [
    {
      "id": "protoDirectory",
      "type": "promptString",
      "description": "Enter the directory for proto files",
      "default": "${workspaceFolder}\\api"
    }
  ]
}
